<UserControl
    x:Class="MstnAPP.Modules.Page.CanHelper.Dialog.Views.FrameWriteDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontFamily="微软雅黑"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto">
    <Grid>
        <materialDesign:Card Margin="10,10,10,10">
            <Grid VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="10,10,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel
                            Grid.Row="0"
                            Margin="10,10,10,10"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Text="ID：" />
                            <TextBox
                                x:Name="Id"
                                MinWidth="72"
                                materialDesign:HintAssist.Hint="Can ID"
                                Cursor="IBeam"
                                Text="{Binding TextBoxId, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <CheckBox
                            x:Name="CheckBoxIsExtId"
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            Content="拓展"
                            Cursor="Hand"
                            IsChecked="{Binding CheckBoxIsExtIdIsChecked}"
                            Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}" />
                    </Grid>

                    <StackPanel
                        Grid.Column="1"
                        Margin="10,10,10,10"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                            Text="DLC：" />
                        <TextBox
                            x:Name="Dlc"
                            MinWidth="72"
                            MaxHeight="27"
                            materialDesign:HintAssist.Hint="Can DLC"
                            Cursor="IBeam"
                            Text="{Binding TextBoxDlc, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </Grid>
                <GroupBox
                    Grid.Row="1"
                    Margin="10,10,10,10"
                    Header="Can 报文">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="10,10,10,10"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Text="Byte0：" />
                            <TextBox
                                x:Name="Byte0"
                                MinWidth="72"
                                materialDesign:HintAssist.Hint="Byte0"
                                Cursor="IBeam"
                                Text="{Binding TextBoxByte0, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="10,10,10,10"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Text="Byte1：" />
                            <TextBox
                                x:Name="Byte1"
                                MinWidth="72"
                                materialDesign:HintAssist.Hint="Byte1"
                                Cursor="IBeam"
                                Text="{Binding TextBoxByte1, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="10,10,10,10"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Text="Byte2：" />
                            <TextBox
                                x:Name="Byte2"
                                MinWidth="72"
                                materialDesign:HintAssist.Hint="Byte2"
                                Cursor="IBeam"
                                Text="{Binding TextBoxByte2, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="10,10,10,10"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Text="Byte3：" />
                            <TextBox
                                x:Name="Byte3"
                                MinWidth="72"
                                materialDesign:HintAssist.Hint="Byte3"
                                Cursor="IBeam"
                                Text="{Binding TextBoxByte3, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="10,10,10,10"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Text="Byte4：" />
                            <TextBox
                                x:Name="Byte4"
                                MinWidth="72"
                                materialDesign:HintAssist.Hint="Byte4"
                                Cursor="IBeam"
                                Text="{Binding TextBoxByte4, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="10,10,10,10"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Text="Byte5：" />
                            <TextBox
                                x:Name="Byte5"
                                MinWidth="72"
                                materialDesign:HintAssist.Hint="Byte5"
                                Cursor="IBeam"
                                Text="{Binding TextBoxByte5, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <StackPanel
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="10,10,10,10"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Text="Byte6：" />
                            <TextBox
                                x:Name="Byte6"
                                MinWidth="72"
                                materialDesign:HintAssist.Hint="Byte6"
                                Cursor="IBeam"
                                Text="{Binding TextBoxByte6, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="10,10,10,10"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Text="Byte7：" />
                            <TextBox
                                x:Name="Byte7"
                                MinWidth="72"
                                materialDesign:HintAssist.Hint="Byte7"
                                Cursor="IBeam"
                                Text="{Binding TextBoxByte7, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <Grid Grid.Row="2" Margin="10,10,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="ButtonWrite"
                        Grid.Column="0"
                        Margin="0,10,0,10"
                        HorizontalAlignment="Center"
                        Command="{Binding ButtonWriteCommand}"
                        Style="{DynamicResource MaterialDesignFlatButton}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Kind="Send" />
                            <TextBlock
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                Text="发送" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="ButtonClear"
                        Grid.Column="1"
                        Margin="0,10,0,10"
                        HorizontalAlignment="Center"
                        Command="{Binding ButtonClearCommand}"
                        Style="{DynamicResource MaterialDesignFlatButton}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Kind="Numeric0Circle" />
                            <TextBlock
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                Text="清空数据" />
                        </StackPanel>
                    </Button>
                </Grid>
                <TextBlock
                    Grid.Row="3"
                    Margin="10,10,10,10"
                    HorizontalAlignment="Center"
                    Style="{StaticResource MaterialDesignOverlineTextBlock}"
                    Text="默认为10进制，0x开头为16进制" />
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>